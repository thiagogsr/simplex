<form action="/calculate" method="post">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="variables_count">Número de Variáveis</label>
        <input type="number" id="variables_count" name="variables_count" class="form-control" autofocus>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="restrictions_count">Número de Restrições</label>
        <input type="number" id="restrictions_count" name="restrictions_count" class="form-control">
      </div>
    </div>
  </div>

  <hr />

  <div class="variables-panel hide">
    <h3>Variáveis</h3>
    <div class="row">
      <div class="col-md-1 variable-field">
        <div class="form-group">
          <input type="number" name="variables[]" class="form-control" placeholder="x₁">
        </div>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Enviar</button>
</form>